{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access dashboard",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/contacts": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access contacts",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/pipeline": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access pipeline",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
}
  },
  "/companies": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view companies",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
},
  "/companies/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view company details",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
   },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}